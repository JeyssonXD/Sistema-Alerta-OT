<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Sistema de Alerta</title>
    @Styles.Render("~/bundles/css")

</head>
<body>
    <div class="container-scroller">
        <!-- Barra principal usuario-->
        <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center">
                <a class="navbar-brand brand-logo" href="@(Url.Action("index","home"))">
                    <img src="~/assets/images/logoineter.png" alt="logo" />
                </a>
                <a class="navbar-brand brand-logo-mini" href="@(Url.Action("index","home"))">
                    <img src="~/assets/images/logo-mini.svg" alt="logo" />
                </a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-center">
                <ul class="navbar-nav">
                    <li class="nav-item font-weight-semibold d-none d-lg-block">Sistema de Alerta Temprana</li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown d-none d-xl-inline-block user-dropdown">
                        <a class="nav-link dropdown-toggle" id="UserDropdown" href="#" data-toggle="dropdown" aria-expanded="false">
                            <img class="img-xs rounded-circle" src="~/assets/images/faces/face8.jpg" alt="Profile image">
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="UserDropdown">
                            <div class="dropdown-header text-center">
                                <img class="img-md rounded-circle" src="~/assets/images/faces/face8.jpg" alt="Profile image">
                                <p class="mb-1 mt-3 font-weight-semibold">Allen Moreno</p>
                                <p class="font-weight-light text-muted mb-0">allenmoreno@gmail.com</p>
                            </div>
                            <a class="dropdown-item">Mi Perfil <i class="dropdown-item-icon ti-dashboard"></i></a>
                            <a class="dropdown-item">Cerrar Sección<i class="dropdown-item-icon ti-power-off"></i></a>
                        </div>
                    </li>
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- Menú Lteral izquierdo -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                    </li>
                    <li class="nav-item nav-category">Menú</li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index","Visor")">
                            <i class="menu-icon typcn typcn-document-text"></i>
                            <span class="menu-title">Visor de Mapas</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Grafico","Grafico")">
                            <i class="menu-icon typcn typcn-th-large-outline"></i>
                            <span class="menu-title">Gráficos Estadisticos</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Reporte","Reporte")">
                            <i class="menu-icon typcn typcn-bell"></i>
                            <span class="menu-title">Reportes</span>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- partial -->
            <div class="main-panel">

                @RenderBody()

                <!-- content-wrapper ends -->
                <!-- partial:partials/_footer.html -->
                <footer class="footer">
                    <div class="container-fluid clearfix">
                        <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">INETER © Derechos Reservados. 2022</span>
                    </div>
                </footer>

                <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
    </div>


    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)

</body>

</html>

